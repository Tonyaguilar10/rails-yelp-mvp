<div class= "header">
  <h1>Restaurants</h1>
</div>
<div>
  <ul class="list-inline">
  <% @restaurants.each do |restaurant| %>
    <li class= "link"><%= link_to restaurant.name, restaurant_path(restaurant) %>| <%= link_to "X", restaurant_path(restaurant), method: :delete,
            data: { confirm: "Are you sure?" } %> </li>
  <% end %>
  </ul>
  <a href= "/restaurants/new" class= "btn-grey">Add an restaurant</a>
</div>
